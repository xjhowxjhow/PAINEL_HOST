<div class="main-adm flex-row">

    <div class ="menu-bar-adm flex-coll">
            <div class="btns btn-menu-custom-style flex-row">
                <i class="fa-spacing-right fa fa-user-tie"></i>
                <p> Painel Administrador</p>
            </div>
            <div class="btns btn-menu-custom-style flex-row " onclick="voltar_main_choice_device()">
                <i class="fa-spacing-right fa fa-arrow-left"></i>
                <p> Voltar</p>
            </div>
            <div class="btns btn-menu-custom-style flex-row" id="pag_adm_guiche" onclick="pages_adm(this.id)">
                <i class="fa-spacing-right fa fa-user-headset"></i>
                <a>Giches</a>
            </div>
            <div class="btns btn-menu-custom-style flex-row active-adm" id="pag_adm_salas" onclick="pages_adm(this.id)">
                <i class="fa-spacing-right fa-solid fa-table-rows"></i>
                <a>Salas</a>
            </div>
            <div class="btns btn-menu-custom-style flex-row">
                <i class="fa-spacing-right fa-solid fa-gear"></i>
                <p>Configurações</p>
            </div>
            <div class="btns btn-menu-custom-style flex-row">
                <i class="fa-spacing-right fa-duotone fa-display"></i>
                <a>Configurações Painel</a>
            </div>
    </div>



    <div class="group-content-adm flex-coll">
        
        <div class="content-adm flex-coll">
            {{!-- lsita sala  --}}

            <div class="modal-content-cancel-ficha" id="modal-giche">


                <div class="modal-header flex-row">
                    <h2 class="fa-trasnparent">Nova Sala</h2>
                    <div class="btns flexbotao no-shadow-btn" id="btn-close-modal-add-guiche">
                        <i class="fa-trasnparent  fa-solid fa-times"></i>
                    </div>
                </div>

                <div class="modal-body">
                    {{!-- info new sala --}}
                    <div class="box-inputs-new-giches flex-row">
                        <div class="box-inputs-new-giches-item flex-coll">
                            <label >Nome</label>
                            <input type="text" name="nome_sala_new" id="nome_sala_new">
                        </div>
                        <div class=" box-inputs-new-giches-item flex-coll">
                            <label>Tipo Sala</label>
                            <input type="text" name="desc_sala_new" id="desc_sala_new">
                        </div>
                    </div>
                </div>
                <div class="modal-footer flex-row">
                     <div class="btns flexbotao no-shadow-btn tools-btns-size" id="btn-add-sala-cancelar">
                        <p>Cancelar</p>
                     </div>
                     <div class="btns flexbotao no-shadow-btn tools-btns-size" id="vtnsalvarsala" onclick="add_new_sala()">
                        <p>Salvar</p>
                     </div>
                </div>
            </div>
            
            <div class="box-title-giches flex-coll">
                <h1>Salas Cadastradas</h1>
            </div>

            <div class=" flex-row">
                <div class="btns btn-menu-custom-style flex-row"  id="btn-add-new-giche">
                    <i class="fa-spacing-right fa-solid fa-plus"></i>
                    <p>Adicionar Sala</p>
                </div>
            </div>
            
            <div class="list-giches flex-coll">
                <div class="header-titles-giches flex-row">
                    <div class="title-giches flex-coll">
                        <p>Nome</p>
                    </div>
                    <div class="title-giches flex-coll">
                        <p>Tipo sala</p>
                    </div>
                    <div class="title-giches flex-coll">
                        <p>Ativo</p>
                    </div>
                    <div class="title-giches flex-coll">
                        <p>Editar</p>
                    </div>
                    <div class="title-giches flex-row">
                        <p>Excluir</p>
                    </div>
                </div>
                {{#each salas_actives}}
                <div class="row-list-giches flex-row">           
                        <div class="item-giches flex-coll">
                            <p>{{dataValues.nome}}</p>
                        </div>
                        <div class="item-giches flex-coll">
                            <p>{{dataValues.tipo_sala}}</p>
                        </div>
                        <div class="item-giches flex-coll">
                            <p>{{dataValues.status_sala}}</p>
                        </div>
                        <div class="item-giches flex-coll">
                            <div class="btns btn-menu-custom-style edit-tbn-table flex-row">
                                <i class="fa-spacing-right fa-solid fa-edit"></i>
                                <p>Editar</p>
                            </div>
                        </div>
                        <div class="item-giches flex-row">
                            <div class="btns btn-menu-custom-style remove-tbn-table flex-row " id="{{dataValues.id}}" onclick="delete_sala_list(this.id)">
                                <i class="fa-spacing-right fa-solid fa-trash"></i>
                                <p>Excluir</p>
                            </div>
                        </div>
                </div>
                {{/each}}



            </div>
        </div>
    

</div>